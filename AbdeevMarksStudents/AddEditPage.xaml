<Page x:Class="AbdeevMarksStudents.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AbdeevMarksStudents"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage" FontFamily="Calibri">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Идентификатор" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBox Margin="5" Text="{Binding STUDENT_ID}" IsEnabled="False" Width="250" FontSize="20" Height="30"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Группа" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <ComboBox Name="GroupsComboBox" Margin="5" DisplayMemberPath="GROUP_NAME" SelectedValuePath="GROUP_ID" SelectedValue="{Binding GROUP_ID}" Width="250" FontSize="20" Height="30"></ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Фамилия" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBox Margin="5" Text="{Binding STUDENT_SURNAME}" Width="250" FontSize="20" Height="30"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Имя" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBox Margin="5" Text="{Binding STUDENT_NAME}" Width="250" FontSize="20" Height="30"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Отчество" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBox Margin="5" Text="{Binding STUDENT_PATRONYMIC}" Width="250" FontSize="20" Height="30"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Дата рождения" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <DatePicker Margin="5" SelectedDate="{Binding STUDENT_BIRTHDAY}" Name="BirthdayDatePicker" FontSize="20" Height="40"></DatePicker>
        </StackPanel>
        <StackPanel Grid.Row="6" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Пол" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBox Margin="5" Text="{Binding STUDENT_GENDER}" Width="50" FontSize="20" Height="30"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="Адрес" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBox Margin="5" Text="{Binding STUDENT_ADDRESS}" Width="300" FontSize="20" Height="60" TextWrapping="Wrap"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="Телефон" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBox Margin="5" Text="{Binding STUDENT_PHONE}" Width="250" FontSize="20" Height="30"></TextBox>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Vertical" Grid.RowSpan="3">
            <TextBlock Text="Логотип" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
            <Image Name="LogoImage" Width="100" Height="100">
                <Image.Source>
                    <Binding Path="STUDENT_PHOTO_IMAGE">
                        <Binding.TargetNullValue>
                            <ImageSource>
                                res/null.jpg
                            </ImageSource>
                        </Binding.TargetNullValue>
                    </Binding>
                </Image.Source>
            </Image>
            <Button Content="Изменить" Name="ChangePictureBtn" Click="ChangePictureBtn_Click"></Button>
        </StackPanel>

        <Button Grid.ColumnSpan="2" Grid.Row="7" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Сохранить" Name="SaveBtn" Click="SaveBtn_Click"></Button>
    </Grid>
</Page>
