<Page x:Class="AbdeevMarksStudents.StudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AbdeevMarksStudents"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentsPage" FontFamily="Calibri" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="кол-во "></TextBlock>
                <TextBlock Name="TBCount"></TextBlock>
                <TextBlock Name="TBAllRecords"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <TextBlock Text="Поиск" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <TextBox Name="SearchTB" VerticalAlignment="Center" FontSize="20" Margin="5" Width="200" SelectionChanged="SearchTB_SelectionChanged"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock Text="Сортировка"  VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <ComboBox Name="SortComboBox" Margin="5"  SelectionChanged="SortComboBox_SelectionChanged" Width="250" FontSize="20" Height="30">
                    <TextBlock>Все</TextBlock>
                    <TextBlock>По ФИО (от А до Я)</TextBlock>
                    <TextBlock>По ФИО (от Я до А)</TextBlock>
                    <TextBlock>По дате рождения (от старших к младшим)</TextBlock>
                    <TextBlock>По дате рождения (от младших к старшим)</TextBlock>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                <TextBlock Text="Фильтрация" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <ComboBox Name="FilterComboBox" Margin="5"  SelectionChanged="FilterComboBox_SelectionChanged" Width="250" FontSize="20" Height="30">
                    <TextBlock>Все</TextBlock>
                    <TextBlock>По полу (м)</TextBlock>
                    <TextBlock>По полу (ж)</TextBlock>
                    <TextBlock>Средний балл сессии > 3</TextBlock>
                    <TextBlock>Средний балл сессии > 4</TextBlock>
                    <TextBlock>Средний балл сессии == 5</TextBlock>
                </ComboBox>
            </StackPanel>
            
            <Button Name="AddBtn" HorizontalAlignment="Right" VerticalAlignment="Center" Click="AddBtn_Click"  Content="Добавить"></Button>

        </WrapPanel>

        <ListView Name="StudentsListView" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition Width="450"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Grid.RowSpan="7" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="STUDENT_PHOTO_IMAGE">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            res/null.jpg
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock Text="{Binding STUDENT_ID, StringFormat=ID: {0}}" Grid.Row="0" Grid.Column="1"></TextBlock>
                        <TextBlock Text="{Binding FIO_STUDENT}" Grid.Row="1" Grid.Column="1"></TextBlock>
                        <TextBlock Text="{Binding GROUP_NAME, StringFormat=Группа: {0}}" Grid.Row="2" Grid.Column="1"></TextBlock>
                        <TextBlock Text="{Binding STUDENT_BIRTHDAY, StringFormat=Дата рождения: {0:dd.MM.yyyy}}" Grid.Row="3" Grid.Column="1"></TextBlock>
                        <TextBlock Text="{Binding STUDENT_GENDER, StringFormat=Пол: {0}}" Grid.Row="4" Grid.Column="1"></TextBlock>
                        <TextBlock Text="{Binding STUDENT_ADDRESS, StringFormat=Адрес: {0}}" Grid.Row="5" Grid.Column="1" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="{Binding STUDENT_PHONE, StringFormat=Телефон: {0}}" Grid.Row="6" Grid.Column="1"></TextBlock>

                        <Button Name="EditBtn" Click="EditBtn_Click" Content="Редактировать" Grid.Row="3" Grid.Column="2"></Button>
                        <Button Name="DeleteBtn" Click="DeleteBtn_Click"  Content="Удалить" Grid.Row="4" Grid.Column="2"></Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
